<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">

    <!-- Enforces a maximum line length -->
    <module name="LineLength">
        <property name="max" value="120"/>
    </module>

    <!-- Ensures files end with a newline -->
    <module name="NewlineAtEndOfFile"/>

    <!-- Main module for Java style checks -->
    <module name="TreeWalker">

        <!-- Enforces class names follow standard conventions -->
        <module name="ClassTypeParameterName"/>

        <!-- Checks if method names follow Java conventions -->
        <module name="MethodName"/>

        <!-- Ensures variable names are in correct format -->
        <module name="LocalVariableName"/>

        <!-- Checks that parameters follow standard naming conventions -->
        <module name="ParameterName"/>

        <!-- Ensures no extra blank lines within code blocks -->
        <module name="EmptyLineSeparator"/>

        <!-- Ensures spacing after keywords like "if", "for", "while" -->
        <module name="WhitespaceAfter"/>

        <!-- Enforces spacing around operators like "+", "-", "=" -->
        <module name="WhitespaceAround"/>

        <!-- Ensures consistent indentation -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="tabWidth" value="4"/>
        </module>

        <!-- Ensures methods and classes have proper Javadoc comments -->
        <module name="JavadocMethod"/>
        <module name="JavadocType"/>
    </module>
</module>